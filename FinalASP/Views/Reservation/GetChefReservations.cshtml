@model IEnumerable<FinalASP.Models.Reservation>

@{
    ViewData["Title"] = "GetChefReservations";
}
<div class="justify-content-center" style="display: flex; align-items: center;">
    <a class="btn btn-primary btn-lg" asp-action="ChefProfile" asp-controller="VirtualKitchen">Back to Profile</a>
</div>
@foreach (var item in Model)
{
    <table class="part-two table table-dark table-hover" style="width: 400px; margin: 0 auto;">
        <thead>
            <tr>
                <th colspan="3">Your Reservavtion Details</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td> @Html.DisplayNameFor(model => item.TotalPrice)</td>
                <td> @Html.DisplayFor(model => item.TotalPrice)</td>
            </tr>
            <tr>
                <td> @Html.DisplayNameFor(model => item.StartDate)</td>
                <td> @Html.DisplayFor(model => item.StartDate)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => item.EndDate)</td>
                <td> @Html.DisplayFor(model => item.EndDate)</td>
            </tr>
            <tr>
                <td> @Html.DisplayNameFor(model => item.kitchen.Name)</td>
                <td>@Html.DisplayFor(model => item.kitchen.Name)</td>
            </tr>
            <tr>
                <td>  @Html.DisplayNameFor(model => item.kitchen.Locaion)</td>
                <td> @Html.DisplayFor(model => item.kitchen.Locaion)</td>
            </tr>
        </tbody>
    </table>

}