<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" data-bs-pause="hover" data-bs-wrap="true" data-bs-keyboard="true">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/homekitchen01.jpeg" class="d-block w-100" alt="homekitchen01">
        </div>
        <div class="carousel-item">
            <img src="~/images/homekitchen02.jpeg" class="d-block w-100" alt="homekitchen02">
        </div>
        <div class="carousel-item">
            <img src="~/images/homekitchen03.jpeg" class="d-block w-100" alt="homekitchen03">
        </div>
    </div>
</div>
<style>
    img {
        height: 450px;
        width: 100%;
    }

    #carouselExampleControls {
        height: 450px;
        position: relative;
        top: 5px;
    }

    .carousel-item {
        transition: transform 7s ease-in-out;
    }

        .carousel-item.next {
            transform: translateX(-100%);
        }

        .carousel-item.prev {
            transform: translateX(100%);
        }
</style>

<script>
    const carousel = new bootstrap.Carousel(document.getElementById('carouselExampleControls'), {
        interval: 3000,
        wrap: true,
        keyboard: true
    });

    carousel._slide = function (carouselItem, slideDirection) {
        const activeItem = this.getActiveCarouselItem();

        if (carouselItem && activeItem && carouselItem !== activeItem) {
            activeItem.classList.remove('active');
            carouselItem.classList.add('active');

            if (slideDirection === 'prev') {
                activeItem.classList.add('prev');
                carouselItem.classList.add('next');
            } else {
                activeItem.classList.add('next');
                carouselItem.classList.add('prev');
            }

            activeItem.addEventListener('transitionend', function () {
                activeItem.classList.remove('prev', 'next');
            }, { once: true });
        }
    };
</script>


