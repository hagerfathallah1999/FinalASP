<div id="slider" class="slider-style">
    <img src="~/images/panana.jpg" alt="Image 1">
    <img src="~/images/oranges.jpg" alt="Image 2">
    <img src="~/images/peach.jpg" alt="Image 3">
</div>
<style>
    .slider-style {
        position: relative;
        bottom: 75px;
        overflow: hidden;
        height: 250px;
        width: 100%;
    }

        .slider-style img {
            position: absolute;
            top: 80px;
            left: 0;
            width: 100%;
            height: auto;
            opacity: 0;
            transition: transform 4s ease-in-out, opacity 0.5s ease-in-out;
            transform: translateX(-100%);
            padding-top: 2px;
            padding-bottom: 2px;
            object-fit: cover; /* Add this line */
        }

            .slider-style img.active {
                opacity: 1;
                transform: translateX(0%);
            }

            .slider-style img.previous {
                opacity: 1;
                transform: translateX(-200%);
            }

            .slider-style img.next {
                opacity: 0;
                transform: translateX(100%);
            }
   
</style>

<script>
    // Get the slider container and images
    const slider = document.getElementById("slider");
    const images = slider.getElementsByTagName("img");

    // Set the initial active image
    let currentImageIndex = 0;
    let previousImageIndex = images.length - 1;
    let nextImageIndex = (currentImageIndex + 1) % images.length;

    // Set the initial positions of images
    images[currentImageIndex].style.opacity = "1";
    images[currentImageIndex].style.transform = "translateX(0%)";
    images[previousImageIndex].style.transform = "translateX(100%)";
    images[nextImageIndex].style.transform = "translateX(-100%)";

    // Define a function to change the active image
    function changeImage() {
        // Calculate the new indexes
        currentImageIndex = (currentImageIndex + 1) % images.length;
        previousImageIndex = (currentImageIndex + images.length - 1) % images.length;
        nextImageIndex = (currentImageIndex + 1) % images.length;

        // Transition the images
        images[currentImageIndex].style.opacity = "1";
        images[currentImageIndex].style.transform = "translateX(0%)";
        images[previousImageIndex].style.opacity = "0";
        images[previousImageIndex].style.transform = "translateX(100%)";
        images[nextImageIndex].style.opacity = "0";
        images[nextImageIndex].style.transform = "translateX(-100%)";

        // Delay the next image change by 2 seconds
        setTimeout(changeImage, 5000);
    }

    // Call the changeImage function initially
    changeImage();
</script>



