
@{
    ViewData["Title"] = "GetSupplierMatrials";
}
<partial name="_ResposiveNavPartial" />
<div class="container-cards-kit-store">
    <div class="row">
    <partial name="_ProfileSidebarPartial" />
    <div class="col">
        @foreach (var item in ViewBag.MatrialsModel)
        {
            <div class="card" style="width: 18rem; display: inline-block;">
                        <img src="\images\@item.Image" class="card-img-top" alt="@item.description" style="height:220px" />
                <div class="text-center card-body">
                    <h5 class="text-center card-title">Name: @item.name</h5>
                        <p class="text-center card-text">Price: @item.Price</p>
                    <p class="text-center card-text">Descreption: @item.description</p>

                    <a asp-action="Edit" asp-controller="SupplierMatrial" asp-route-id="@item.id" class="text-center btn btn-primary">Edit your Products</a>
                </div>
            </div>
        }
    </div>
    </div>
</div>
