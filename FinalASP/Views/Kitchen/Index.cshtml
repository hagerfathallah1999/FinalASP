<div class="container-cards-kit-store">
    <div class="row row-cols-1 row-cols-lg-4 g-2 g-lg-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="p-3">
                    <div class="card" style="width: 18rem; display: inline-block;">
                        <img src="\images\@item.KitchenImage1" class="card-img-top" alt="@item.Description" style="height:220px" />
                        <div class="text-center card-body">
                            <h5 class="text-center card-title">@item.Name</h5>
                            <p class="text-center card-text">@item.Locaion</p>
                            <p class="text-center card-text">@item.Price/Day</p>
                            <p class="text-center card-text">Owner:@item.PhysicalKitchen.Name</p>
                            <a href="\Kitchen\KitchenDetails\@item.Id" class="text-center btn btn-light">See Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


