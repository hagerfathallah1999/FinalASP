<div class="booking-form">
    <div class="booking-bg"></div>
    <form>
        <div class="form-header">
            <h2>Make your reservation</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <span class="form-label">Start Date</span>
                    <input class="form-control" type="date" required="" id="Start" min="2023-04-29" max="2030-12-31">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <span class="form-label">End Date</span>
                    <input class="form-control" type="date" required="" id="End" >
                </div>
            </div>
        </div>
        <div class="form-btn">
            <button class="submit-btn">Book Now</button>
        </div>
    </form>
</div>

      
