@model IEnumerable<FinalASP.Models.SupplierMatrial>

@{
    ViewData["Title"] = "MarketPlace";
}
<div>
<partial name="_ResposiveNavPartial" />


</div>
<div class="container-cards-mat-store">
    <div class="col-md-12 handle-col-md-12">
        @foreach (var item in Model)
        {
            <div class="card cards-mat-store" style="width: 18rem; display: inline-block;">
                <img src="\images\@item.Image" class="card-img-top text-light" alt="@item.description" style="height:220px" />
                <div class="text-center card-body">
                    <p class="price text-light">Price: @item.Price EGP /KG</p>
@*                Price: @item.Price EGP /KG
                *@                    <p class="text-center card-text text-light">@item.description</p>
                <a href="/cart/AddToCart/@item.id" class="text-center btn btn-light">Add to cart</a>
                </div>
            </div>
        }
    </div>

    </div>


<style>
    .col-md-12.handle-col-md-12{
        margin: 1%;

    }

    .container-cards-mat-store {
        padding: 20px 0px;
        padding-left: 6%;
        position: absolute;
        top: 150px;
        width: 100%;
        left: 0;
        right: 0;
        height: 600px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        overflow-y: auto;
    }



    .card.cards-mat-store {
        margin-right: 3%;
        /* margin-bottom: 2px; */
        /* margin: 0 20px; */
        margin-bottom: 1%;
        background-color: #212529;
    }



        .card .card-title,
        .card .card-text {
            font-size: 20px;
            font-family: monospace;
        }

        .card .btn {
        }

</style>