@model IEnumerable<FinalASP.Models.SupplierMatrial>

@{
    ViewData["Title"] = "MarketPlace";
}
<div>
<partial name="_ResposiveNavPartial" />


</div>
<div class="container-cards-prod-store">
    <div class="col-md-9">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem; display: inline-block;">
                <img src="\images\@item.Image" class="card-img-top" alt="@item.description" style="height:220px" />
                <div class="text-center card-body">
                    <p class="price text-light">Price: @item.Price EGP /KG</p>
@*                Price: @item.Price EGP /KG
*@                    <p class="text-center card-text">@item.description</p>
                <a href="/cart/AddToCart/@item.id" class="text-center btn btn-light">Add to cart</a>
                </div>
            </div>
        }
    </div>

    </div>


<style>


    .container-cards-prod-store {
        position: absolute;
        top: 150px;
        width: 100%;
        left: 0;
        right: 0;
        height: 600px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        overflow-y: auto;
        padding: 1%;
    }



    .card {
        margin-bottom: 1%;
        background-color: #212529;
    }



        .card .card-title,
        .card .card-text {
            color: white;
            font-size: 20px;
            font-family: monospace;
        }

        .card .btn {
        }

</style>