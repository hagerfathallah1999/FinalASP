@model FinalASP.ViewModel.ClientLogInViewModel

@{
    ViewData["Title"] = "LogIn";
}
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-light bg-dark">

                <div class="px-5 ms-xl-4 d-flex handle-logo-login">
@*                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">KITCHENIRO</span>*@
                    <img src="~/Images/logo.png" alt="Image 1" class=" mt-xl-4 logo-one" style="vertical-align:unset" >
                    <img src="~/images/kitcheniro kaas.png" alt="Image 2" class="h1 fw-bold mb-0 logo-two" >
                </div>
             
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-action="Login" style="width: 23rem;">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login</h3>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example18">UserName</label>
                            <input asp-for="UserName" id="form2Example18" class="form-control form-control-lg" />
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>
                        <div class="form-outline mb-4">

                            <label class="form-label" for="Password">Password</label>  
                            <input asp-for="Password" id="Password" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                         <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>
                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block btn-light" type="submit">Login</button>
                            <p class="small mb-2 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>
                            <p>Don't have an account? <a asp-controller="ClientRegistration" asp-action="Registration" class="link-info">Register here</a></p>
                        </div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://images.pexels.com/photos/1624487/pexels-photo-1624487.jpeg?auto=compress&cs=tinysrgb&w=600"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
